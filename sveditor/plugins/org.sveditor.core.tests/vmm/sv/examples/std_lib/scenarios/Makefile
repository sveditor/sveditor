VMM	= +incdir+$(VMM_HOME)/sv
#VMM	= -ntb_opts rvm

OPTS	= 

VCS	= vcs -R -sverilog +verilog1995ext+.v $(VMM) \
              -ntb_opts dtm +warn=noBCNACMBP 

all: test

test simple:
	$(VCS) $(OPTS) test.sv

clean:
	rm -rf simv* csrc *~ *.log vc_*.h *.vpd *.key *.db *.report .v*
