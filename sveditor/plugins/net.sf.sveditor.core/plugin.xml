<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="SVLibraries" name="SystemVerilog Libraries" schema="schema/SVLibraries.exsd"/>
   <extension-point id="SVDBIndexFactories" name="SVDB Index Factory extension point" schema="schema/SVDBIndexFactories.exsd"/>
   <extension-point id="SVTemplates" name="SystemVerilog Templates" schema="schema/SVTemplates.exsd"/>
   <extension-point id="SVLogMessageScanners" name="Log Message Scanner" schema="schema/SVLogMessageScanners.exsd"/>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="v, vl, vlog, sv, svh, vh, vp, vs, svp, svi, v95, v95p"
            id="systemverilog"
            name="SystemVerilog"
            priority="normal">
         <property
               default="true"
               name="net.sf.sveditor.core.svfile">
         </property>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="f, F, args, irunargs, flist"
            id="net.sf.sveditor.core.argfile"
            name="SystemVerilog Argument File"
            priority="normal">
         <property
               default="true"
               name="net.sf.sveditor.core.sv_argfile">
         </property>
      </content-type>
   </extension>
   <extension
         id="SVNature"
         name="SystemVerilog Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="net.sf.sveditor.core.SVProjectNature">
         </run>
      </runtime>
      <builder
            id="net.sf.sveditor.core.SVProjectBuilder">
      </builder>
   </extension>
   <extension
         point="net.sf.sveditor.core.SVLibraries">
      <SVLibrary
            default="true"
            id="net.sf.sveditor.sv_builtin"
            name="SystemVerilog Builtin Types"
            path="sv_builtin/sv_builtin.sv">
         <description>
            OVM 2.0.1 library from http://ovmworld.org
         </description>
      </SVLibrary>
   </extension>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="plugin">
         <run
               class="net.sf.sveditor.core.db.index.plugin_lib.PluginFilesystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="net.sf.sveditor.core.SVDBIndexFactories">
      <SVDBIndexFactory
            class="net.sf.sveditor.core.db.index.plugin_lib.SVDBPluginLibIndexFactory"
            id="net.sf.sveditor.pluginLibIndex">
      </SVDBIndexFactory>
      <SVDBIndexFactory
            class="net.sf.sveditor.core.db.index.argfile.SVDBArgFileIndexFactory"
            id="net.sf.sveditor.argFileIndex">
      </SVDBIndexFactory>
      <SVDBIndexFactory
            class="net.sf.sveditor.core.db.index.old.SVDBShadowIndexFactory"
            id="net.sf.sveditor.shadowIndex">
      </SVDBIndexFactory>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IProject"
            class="net.sf.sveditor.core.SVProjectDataAdapter">
         <adapter
               type="net.sf.sveditor.core.db.project.SVDBProjectData">
         </adapter>
      </factory>
   </extension>
   <extension
         id="SVProjectBuilder"
         name="SVEditor Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true"
            isConfigurable="false"
            supportsConfigurations="false">
         <run
               class="net.sf.sveditor.core.SVProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="problem"
         name="SVE Index Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="id">
      </attribute>
      <attribute
            name="flags">
      </attribute>
      <attribute
            name="arguments">
      </attribute>
      <attribute
            name="categoryId">
      </attribute>
   </extension>
   <extension
         id="task"
         name="SVEditor Task Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.taskmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            id="net.sf.sveditor.core.buildScriptLaunchType"
            modes="run"
            name="SVEditor Build Script">
      </launchConfigurationType>
   </extension>
   <extension
         id="svScriptProblem"
         name="SVE Script Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
      <attribute
            name="id">
      </attribute>
      <attribute
            name="flags">
      </attribute>
      <attribute
            name="arguments">
      </attribute>
      <attribute
            name="categoryId">
      </attribute>
   </extension>
   <extension
         point="net.sf.sveditor.core.SVLogMessageScanners">
      <LogMessageScanner
            class="net.sf.sveditor.core.script.launch.QuestaLogMessageScanner"
            id="net.sf.sveditor.core.questaLogMessageScanner"
            name="Questa Log Scanner"
            type="general">
      </LogMessageScanner>
      <LogMessageScanner
            class="net.sf.sveditor.core.script.launch.VerilatorLogMessageScanner"
            id="net.sf.sveditor.core.verilatorLogScanner"
            name="Verilator Log Scanner"
            type="build">
      </LogMessageScanner>
      <LogMessageScanner
            class="net.sf.sveditor.core.script.launch.MakefileLogMessageScanner"
            id="net.sf.sveditor.core.makeLogScanner"
            name="Make Log Scanner"
            type="build">
      </LogMessageScanner>
      <LogMessageScanner
            class="net.sf.sveditor.core.script.launch.GccLogMessageScanner"
            id="net.sf.sveditor.core.gccLogScanner"
            name="GCC Log Scanner"
            type="build">
      </LogMessageScanner>
      <LogMessageScanner
            class="net.sf.sveditor.core.script.launch.NCSimLogMessageScanner"
            id="net.sf.sveditor.core.ncsimLogScanner"
            name="NCSim Log Scanner"
            type="build">
      </LogMessageScanner>
   </extension>
   <extension
         id="svProblem"
         name="SVE Script SV Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="net.sf.sveditor.core.svScriptProblem">
      </super>
   </extension>
   <extension
         id="gccProblem"
         name="SVE Script GCC Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="net.sf.sveditor.core.svScriptProblem">
      </super>
   </extension>


</plugin>
